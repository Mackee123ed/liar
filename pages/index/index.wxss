/* pages/index/index.wxss */
.container {
  height: 100vh;
  background: linear-gradient(180deg, #4B79A1 0%, #283E51 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.game-title {
  font-size: 48rpx;
  color: #fff;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
  margin: 80rpx 0;
}

.user-card {
  background: rgba(255,255,255,0.1);
  border-radius: 32rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 60rpx;
  backdrop-filter: blur(10px);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid #fff;
}

.nickname {
  font-size: 36rpx;
  color: #fff;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.auth-btn, .start-btn {
  width: 80%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  color: #fff;
  margin: 40rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.auth-btn {
  background: #07C160;
  box-shadow: 0 8rpx 16rpx rgba(7,193,96,0.3);
}

.start-btn {
  background: #FF5722;
  box-shadow: 0 8rpx 16rpx rgba(255,87,34,0.3);
}

.auth-btn:active, .start-btn:active {
  transform: scale(0.95);
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.announcement {
  position: fixed;
  bottom: 80rpx;
  width: 80%;
  background: rgba(255,255,255,0.1);
  border-radius: 24rpx;
  padding: 30rpx;
}

.title {
  display: block;
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.content {
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
  white-space: pre-wrap;
}